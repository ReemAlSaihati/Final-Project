<h1>
List of all books owned by <%= @current_user.username %>
</h1>


<div class="row mb-3">
  <div class="col-md-12">
<table class="table">

  <tr>

        <th>
          Title
        </th>

        <th>
          Price
        </th>

        <th>
          Image
        </th>

        <th>
          Availability
        </th>

        <th>
          Author
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

    </tr>

    <%= my_books = Book.where({ :owner_id => @current_user.id}).all %>

    <% my_books.each do |book| %>
    <tr>

        <td>
          <%= book.title %>
        </td>

        <td>
          <%= book.price  %>
        </td>

        <td>
          <img src="<%= book.image %>" height="200" width="150">
        </td>

        <td>
          <% if book.availability == true %>
            available
          <% else %> 
           sold 
          <% end %>    
        </td>


        <td>
          <%= book.author %>
        </td>

        <td>
          <%= time_ago_in_words(book.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(book.updated_at) %> ago
        </td>

        <td>
          <a href="/books/<%= book.id %>">
            Show details
          </a>
        </td>
      </tr>

      <% end %>


  </table>
  </div>
  </div>




