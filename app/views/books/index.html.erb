<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all available books
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Sell a book or Request one 
    </h2>

    <form action="/insert_book" method="post">

      <div class="form-group">
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="title_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="price_box">
          Price
        </label>

        <input type="text" id="price_box" name="price_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="image_from_query" class="form-control">
      </div>


      <div class="form-group">
        <label for="author_box">
          Author
        </label>

        <input type="text" id="author_box" name="author_from_query" class="form-control">
      </div>

      <div>
        <label>Selling?</label>
        <input type="checkbox">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create book
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>

        <th>
          Owner
        </th>

        <th>
          Title
        </th>

        <th>
          Price
        </th>

        <th>
          Image
        </th>

        <th>
          Availability
        </th>

        <th>
          Author
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @books.each do |book| %>
      <tr>

        <td>
          <%= User.where({ :id => book.owner_id}).at(0).username %>
        </td>

        <td>
          <%= book.title %>
        </td>

        <td>
          <%= book.price %>
        </td>

        <td>
          <img src="<%= book.image %>" height="200" width="150">
        </td>

        <td>
          <% if book.availability == true %>
            Selling
          <% else %> 
            Looking for 
          <% end %>    
        </td>

        <td>
          <%= book.author %>
        </td>

        <td>
          <%= time_ago_in_words(book.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(book.updated_at) %> ago
        </td>

        <td>
          <a href="/books/<%= book.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
