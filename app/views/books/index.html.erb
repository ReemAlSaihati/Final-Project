<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all books
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new book
    </h2>

    <form action="/insert_book" method="post">
      <div class="form-group">
        <label for="owner_id_box">
          Owner
        </label>

        <input type="text" id="owner_id_box" name="owner_id_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="title_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="price_box">
          Price
        </label>

        <input type="text" id="price_box" name="price_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="image_from_query" class="form-control">
      </div>

      <div class="custom-control custom-checkbox mb-3">
        <input type="checkbox" class="custom-control-input" id="availability_box" name="availability_from_query" value="1">

        <label class="custom-control-label" for="availability_box">Availability</label>
      </div>

      <div class="form-group">
        <label for="author_box">
          Author
        </label>

        <input type="text" id="author_box" name="author_from_query" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create book
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Owner
        </th>

        <th>
          Title
        </th>

        <th>
          Price
        </th>

        <th>
          Image
        </th>

        <th>
          Availability
        </th>

        <th>
          Author
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @books.each do |book| %>
      <tr>
        <td>
          <%= book.id %>
        </td>

        <td>
          <%= book.owner_id %>
        </td>

        <td>
          <%= book.title %>
        </td>

        <td>
          <%= book.price %>
        </td>

        <td>
          <%= book.image %>
        </td>

        <td>
          <%= book.availability %>
        </td>

        <td>
          <%= book.author %>
        </td>

        <td>
          <%= time_ago_in_words(book.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(book.updated_at) %> ago
        </td>

        <td>
          <a href="/books/<%= book.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
