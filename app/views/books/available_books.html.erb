<h1>
  List of all books available for sale
</h1>



<% available_books = Book.where({ :availability => true}) %>




<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>

        <th>
          Owner
        </th>

        <th>
          Title
        </th>

        <th>
          Price 
        </th>

        <th>
          Image
        </th>

        <th>
          Author
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
          Bid 
        </th>
      </tr>

      <% available_books.each do |book| %>
      <tr>

        <td>
          <%= User.where({ :id => book.owner_id}).at(0).username %>
        </td>

        <td>
          <%= book.title %>
        </td>

        <td>
          <%= book.price %>
        </td>

        <td>
          <img src="<%= book.image %>" height="200" width="150">
        </td>

        <td>
          <%= book.author %>
        </td>

        <td>
          <%= time_ago_in_words(book.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(book.updated_at) %> ago
        </td>

        <td>
          <a href="/books/<%= book.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
