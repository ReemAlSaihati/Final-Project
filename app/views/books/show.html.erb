<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Book #<%= @book.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/books" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/delete_book/<%= @book.id %>" class="btn btn-block btn-outline-secondary">
          Delete book
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Owner
      </dt>
      <dd>
        <%= @book.owner_id %>
      </dd>

      <dt>
        Title
      </dt>
      <dd>
        <%= @book.title %>
      </dd>

      <dt>
        Price
      </dt>
      <dd>
        <%= @book.price %>
      </dd>

      <dt>
        Image
      </dt>
      <dd>
        <%= @book.image %>
      </dd>

      <dt>
        Availability
      </dt>
      <dd>
        <%= @book.availability %>
      </dd>

      <dt>
        Author
      </dt>
      <dd>
        <%= @book.author %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@book.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@book.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit book
    </h2>

    <form action="/modify_book/<%= @book.id %>"  method="post" >
      <div class="form-group">
        <label for="owner_id_box">
          Owner
        </label>

        <input type="text" id="owner_id_box" name="owner_id_from_query" class="form-control" value="<%= @book.owner_id %>">
      </div>

      <div class="form-group">
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="title_from_query" class="form-control" value="<%= @book.title %>">
      </div>

      <div class="form-group">
        <label for="price_box">
          Price
        </label>

        <input type="text" id="price_box" name="price_from_query" class="form-control" value="<%= @book.price %>">
      </div>

      <div class="form-group">
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="image_from_query" class="form-control" value="<%= @book.image %>">
      </div>

      <div class="custom-control custom-checkbox mb-3">
        <input type="checkbox" class="custom-control-input" id="availability_box" name="availability_from_query" value="1" <%= "checked" if @book.availability %>>

        <label class="custom-control-label"
          for="availability_box">Availability</label>
      </div>

      <div class="form-group">
        <label for="author_box">
          Author
        </label>

        <input type="text" id="author_box" name="author_from_query" class="form-control" value="<%= @book.author %>">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update book
      </button>
    </form>
  </div>
</div>

<hr>
