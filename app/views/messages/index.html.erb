<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      Send a New Message 
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Send a new message
    </h2>

    <form action="/insert_message" method="post">

    <label for="sender_id_box">
        </label>

        <input type="hidden" id="sender_id_box" name="sender_id_from_query" value="<%= @current_user.id %>">

  <label for="sender_username_box"> 
        </label> 
        <input type="hidden" id="sender_username_box" name="sender_username_from_query" value="<%= @current_user.username %>">

  <label for="title_username_boxx"> 
        </label> 
        <input type="hidden" id="sender_username_box" name="sender_username_from_query" value="<%= @current_user.username %>">

    <div class="form-group">
          What book are you sending this message about? 
      <select name="book_title_from_query">
        <% Book.all.each do |book| %>
        <option value="<%=book.title%>"><%=book.title%></option>
        <%end%>
      </select>
      </div>

    <div class="form-group">
          Who are you sending this messsage to?
    <select name="receiver_username_from_query">
        <% User.all.each do |name| %>
        <option value="<%=name.username %>"><%=name.username %></option>
        <%end%>
      </select>
      </div>

  

      <div class="form-group">
        <label for="message_sent_box">
          Message 
        </label>

        <textarea type="text" id="message_sent_box" name="message_sent_from_query" class="form-control">
        </textarea>
      </div>


      <button class="btn btn-block btn-outline-secondary">
        Create message
      </button>
    </form>
  </div>
</div>

  <div class="col-md-8 offset-md-2">
    <h2>
      Here are your current messages 
  </h2>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>

        <th>
          Sender username
        </th>

        <th>
          Sender venmo
        </th>

        <th>
          Message sent
        </th>

        <th>
          Sent since
        </th>

        <th>
          Sent since date
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @messages.each do |message| %>
      <tr>

        <td>
          <%= message.sender_username %>
        </td>

        <td>
          <%= message.sender_venmo %>
        </td>

        <td>
          <%= message.receiver_venmo %>
        </td>

        <td>
          <%= message.message_sent %>
        </td>

        <td>
          <%= message.sent_since %>
        </td>

        <td>
          <%= message.sent_since_date %>
        </td>

        <td>
          <%= time_ago_in_words(message.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(message.updated_at) %> ago
        </td>

        <td>
          <a href="/messages/<%= message.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
