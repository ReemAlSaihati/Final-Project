<h1>
<%= @current_user.username %>
</h1>

<hr>
<h4>
<p><font color="CA97E8">
<n>
General Information
</n>
</font>
</p>


<p><font color="A0B3FF">
<n>
<div>
Email: <h6> <%= @current_user.email %> </h6>
</div>

<div>
Phone Number: <h6>  <%= @current_user.phone_number %> </h6>
</div>

<div>
Address: <h6> <%= @current_user.address %> </h6>
</div>


</h4>
</hr>

<hr>

</hr>
</font>
</p>


<div >
  <h5>
    Edit User Account
  </h5>

  <div>
    <form action="/patch_user" method="post">
      <div>
        <label for="email_box">Email</label>
        <input id="email_box" name="email_from_query" value="<%= @current_user.email %>">
      </div>
      <div>
        <label for="username_box">Username</label>
        <input id="username_box" name="username_from_query" value="<%= @current_user.username %>">
      </div>
      <div>
        <label for="phone_number_box">Phone number</label>
        <input id="phone_number_box" name="phone_number_from_query" value="<%= @current_user.phone_number %>">
      </div>
      <div>
        <label for="address_box">Address</label>
        <input id="address_box" name="address_from_query" value="<%= @current_user.address %>">
      </div>

      <div>
        <label for="password_box">Password</label>
        <input id="password_box" name="password_from_query" placeholder="Choose a password..." type="password">
      </div>
    
      <div>
        <label for="password_confirmation_box">Password Confirmation</label>
        <input id="password_confirmation_box" name="password_confirmation_from_query" placeholder="Confirm your password..." type="password">
      </div>

      <button>
        Update account
      </button>
    </form>
  </div>
</div>
